{
    "compilerOptions": {
        "target":"ES2015",
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots" : ["node_modules/@types", "src/types"]
       },
    "exclude": [
        "node_modules"
    ]
}